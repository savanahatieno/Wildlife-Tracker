{{#partial "content"}}

    <section class = "landing">
        <div class = "container">
            <form action="/animals/new" method="post" >
                <h1>Fill in</h1>
                <div class = "form-group">
                    <label for="">ID No : </label>
                    <input type="text" class = " form-control" required>
                </div>
                <div class = "form-group">
                    <label for="">Animal Name :</label>
                    <input type="text" class = " form-control" required>
                </div>
                <div class = "form-group">
                    <label for="">Health :</label>
                    <select class = " form-control" name="health" size="2" required multiple>
                        <option value="Sick">Volvo</option>
                        <option value="Healthy">Saab</option>
                        <option value="Recovered">Audi</option>
                    </select>
                </div>
                <div class = "form-group">
                    <label for="">Age Type :</label>
                    <select class = " form-control" name="age_type" size="2" required multiple>
                        <option value="Old">Volvo</option>
                        <option value="Young">Saab</option>
                        <option value="Adult">Audi</option>
                    </select>
                </div>
                <a  href="/endangeredanimals" ><input type="submit" class = "btn-1" value="submit"></a>
            </form>
        </div>
    </section>


{{/partial}}
